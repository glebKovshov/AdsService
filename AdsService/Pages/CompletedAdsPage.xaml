<Page x:Class="AdsService.Pages.CompletedAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:AdsService.Converters"
      Title="Завершённые объявления"
      FontFamily="Tw Cen MT"
      FontSize="12"
      Background="White">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#37474F" />
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#78909C" />
        <SolidColorBrush x:Key="AccentBrush" Color="#FF9C1A" />
        <SolidColorBrush x:Key="CardBorderBrush" Color="#FFE0E0E0" />

        <conv:ImagePathToSourceConverter x:Key="ImagePathToSourceConverter" />
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="10" Margin="0,0,0,16" Background="White">
            <DockPanel>
                <Button Content="Назад"
                        Width="90"
                        Height="30"
                        Margin="0,0,16,0"
                        Click="BtnBack_Click"/>

                <Image Source="/Resources/Лого.png"
                       Width="40"
                       Height="40"
                       Margin="0,0,16,0"
                       Stretch="Uniform"/>

                <TextBlock Text="Завершённые объявления"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryTextBrush}"/>
            </DockPanel>
        </Border>

        <!-- Summary -->
        <Border Grid.Row="1" Padding="10" Margin="0,0,0,16" Background="White" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Итого прибыль: "
                           Foreground="{StaticResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="TxtTotalProfit"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- List -->
        <ListView x:Name="AdsListView"
                  Grid.Row="2"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,16"
                            Padding="10"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            Background="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="170"/>
                            </Grid.ColumnDefinitions>

                            <Image Width="90"
                                   Height="90"
                                   Margin="0,0,10,0"
                                   Stretch="UniformToFill"
                                   Source="{Binding ImagePath, Converter={StaticResource ImagePathToSourceConverter}}"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Title}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Margin="0,0,0,4"/>

                                <TextBlock Foreground="{StaticResource SecondaryTextBrush}">
                                    <Run Text="Дата: "/>
                                    <Run Text="{Binding PostDate, StringFormat=\{0:dd.MM.yyyy\}}"/>
                                </TextBlock>

                                <TextBlock Foreground="{StaticResource SecondaryTextBrush}">
                                    <Run Text="Цена: "/>
                                    <Run Text="{Binding Price}"/>
                                    <Run Text=" ₽"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock Text="Прибыль"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           HorizontalAlignment="Right"/>

                                <TextBlock FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}"
                                           FontSize="14"
                                           HorizontalAlignment="Right">
                                    <Run Text="{Binding ProfitAmount}"/>
                                    <Run Text=" ₽"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
