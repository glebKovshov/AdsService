<Page x:Class="AdsService.Pages.UserAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:AdsService.Converters"
      Title="Мои объявления"
      FontFamily="Tw Cen MT"
      FontSize="12"
      Background="White">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#37474F" />
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#78909C" />
        <SolidColorBrush x:Key="AccentBrush" Color="#FF9C1A" />
        <SolidColorBrush x:Key="CardBorderBrush" Color="#FFE0E0E0" />
        <conv:ImagePathToSourceConverter x:Key="ImagePathToSourceConverter" />
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>                                                                                                                           
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Margin="0,0,0,16"
            Padding="10"
            BorderBrush="{StaticResource CardBorderBrush}"
            BorderThickness="1"
            Background="Transparent"
            Cursor="Hand"
            MouseLeftButtonUp="AdTile_MouseLeftButtonUp">
            <DockPanel>
                <Button Content="Назад"
                        Width="90"
                        Height="30"
                        Margin="0,0,16,0"
                        Click="BtnBack_Click"/>

                <Image Source="/Resources/Лого.png"
                       Width="40"
                       Height="40"
                       Margin="0,0,16,0"
                       Stretch="Uniform" />

                <TextBlock Text="Мои объявления"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryTextBrush}" />

                <DockPanel DockPanel.Dock="Right" LastChildFill="False">
                    <Button Content="Выйти"
                            Width="90"
                            Height="30"
                            Margin="16,0,0,0"
                            Click="BtnSignOut_Click"/>
                </DockPanel>
            </DockPanel>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Button Content="Добавить объявление"
                    Width="180"
                    Height="38"
                    Background="{StaticResource AccentBrush}"
                    BorderBrush="{StaticResource AccentBrush}"
                    Foreground="White"
                    Click="BtnAdd_Click"/>
            <Button Content="Завершённые"
            Width="140"
            Height="38"
            Margin="16,0,0,0"
            Click="BtnCompleted_Click"/>

            <TextBlock x:Name="TxtUserInfo"
                       Margin="16,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource SecondaryTextBrush}"/>
        </StackPanel>

        <!-- List -->
        <ListView x:Name="AdsListView"
                  Grid.Row="2"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch"
                  SelectionChanged="AdsListView_SelectionChanged">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Focusable" Value="False"/>
                    <EventSetter Event="PreviewMouseLeftButtonUp"
                         Handler="AdsItem_PreviewMouseLeftButtonUp"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,16"
                            Padding="10"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            Background="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Image Width="90"
                                   Height="90"
                                   Margin="0,0,10,0"
                                   Stretch="UniformToFill"
                                   Source="{Binding ImagePath, Converter={StaticResource ImagePathToSourceConverter}}"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Title}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Margin="0,0,0,4"/>

                                <TextBlock Foreground="{StaticResource SecondaryTextBrush}">
                                    <Run Text="Статус: "/>
                                    <Run Text="{Binding AdStatus.Name}"/>
                                </TextBlock>

                                <TextBlock Foreground="{StaticResource SecondaryTextBrush}">
                                    <Run Text="Цена: "/>
                                    <Run Text="{Binding Price}"/>
                                    <Run Text=" ₽"/>
                                </TextBlock>

                                <TextBlock Foreground="{StaticResource SecondaryTextBrush}">
                                    <Run Text="Дата: "/>
                                    <Run Text="{Binding PostDate, StringFormat=\{0:dd.MM.yyyy\}}"/>
                                </TextBlock>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Content="Удалить"
                                    Width="100"
                                    Height="30"
                                    VerticalAlignment="Top"
                                    Click="BtnDelete_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
