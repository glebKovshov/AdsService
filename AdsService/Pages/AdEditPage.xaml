<Page x:Class="AdsService.Pages.AdEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Объявление"
      FontFamily="Tw Cen MT"
      FontSize="12"
      Background="White">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#37474F" />
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#78909C" />
        <SolidColorBrush x:Key="AccentBrush" Color="#FF9C1A" />
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="10" Margin="0,0,0,16" Background="White">
            <DockPanel>
                <Button Content="Назад"
                        Width="90"
                        Height="30"
                        Margin="0,0,16,0"
                        Click="BtnBack_Click"/>

                <Image Source="/Resources/Лого.png"
                       Width="40"
                       Height="40"
                       Margin="0,0,16,0"
                       Stretch="Uniform" />

                <TextBlock x:Name="TxtHeader"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryTextBrush}" />
            </DockPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,16,0">

                    <TextBlock Text="Название" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <TextBox x:Name="TxtTitle" Height="38" Padding="10" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                    <TextBlock Text="Описание" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <TextBox x:Name="TxtDescription" Height="120" Padding="10" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,16"/>

                    <TextBlock Text="Цена (₽)" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <TextBox x:Name="TxtPrice" Height="38" Padding="10" VerticalContentAlignment="Center" Margin="0,0,0,16"/>

                    <TextBlock Text="Дата публикации" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <DatePicker x:Name="DpPostDate" Height="38" Margin="0,0,0,16"/>

                </StackPanel>

                <StackPanel Grid.Column="1">

                    <TextBlock Text="Город" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <ComboBox x:Name="CmbCity" Height="38" Margin="0,0,0,16" DisplayMemberPath="Name"/>

                    <TextBlock Text="Категория" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <ComboBox x:Name="CmbCategory" Height="38" Margin="0,0,0,16" DisplayMemberPath="Name"/>

                    <TextBlock Text="Тип" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <ComboBox x:Name="CmbType" Height="38" Margin="0,0,0,16" DisplayMemberPath="Name"/>

                    <TextBlock Text="Статус" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <ComboBox x:Name="CmbStatus" Height="38" Margin="0,0,0,16" DisplayMemberPath="Name"/>

                    <TextBlock Text="Фото (путь)" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6"/>
                    <TextBox x:Name="TxtImagePath" Height="38" Padding="10" VerticalContentAlignment="Center" Margin="0,0,0,8"/>

                    <Button Content="Выбрать фото..."
                            Height="30"
                            Width="140"
                            Click="BtnPickImage_Click"/>

                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить"
                    Width="120"
                    Height="38"
                    Background="{StaticResource AccentBrush}"
                    BorderBrush="{StaticResource AccentBrush}"
                    Foreground="White"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
